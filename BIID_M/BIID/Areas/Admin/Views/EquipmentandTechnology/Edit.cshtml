@model BIID.Entities.EquipmentAndTechnology

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutOfAdmin.cshtml";
}

<h2>Edit Equipment And Technology</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Equipment And Technology</legend>

        @Html.HiddenFor(model => model.Id)

       
        <div class="editor-label">
            @Html.LabelFor(model => model.ItemId, "Item")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ItemId", String.Empty)
            @Html.ValidationMessageFor(model => model.ItemId)
        </div>
       
        <div class="editor-label">
            @Html.LabelFor(model => model.NameOfEquipment)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.NameOfEquipment)
            @Html.ValidationMessageFor(model => model.NameOfEquipment)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Brief)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Brief)
            @Html.ValidationMessageFor(model => model.Brief)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HowToUse)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.HowToUse)
            @Html.ValidationMessageFor(model => model.HowToUse)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Precaution)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Precaution)
            @Html.ValidationMessageFor(model => model.Precaution)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Availability)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Availability)
            @Html.ValidationMessageFor(model => model.Availability)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Remarks)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Remarks)
            @Html.ValidationMessageFor(model => model.Remarks)
        </div>

       

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
