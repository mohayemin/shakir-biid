@model BIID.Entities.Planting

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutOfAdmin.cshtml";
}

<h2>Create Planting Data</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Planting</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.ItemId, "Item")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ItemId", String.Empty)
            @Html.ValidationMessageFor(model => model.ItemId)
        </div>
       
       
       
        <div class="editor-label">
            @Html.LabelFor(model => model.SoliType)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.SoliType)
            @Html.ValidationMessageFor(model => model.SoliType)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PlantingTime)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.PlantingTime)
            @Html.ValidationMessageFor(model => model.PlantingTime)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PlantingSystems)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.PlantingSystems)
            @Html.ValidationMessageFor(model => model.PlantingSystems)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PlantingSpace)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.PlantingSpace)
            @Html.ValidationMessageFor(model => model.PlantingSpace)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Seeding)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Seeding)
            @Html.ValidationMessageFor(model => model.Seeding)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Remarks)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Remarks)
            @Html.ValidationMessageFor(model => model.Remarks)
        </div>

       

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
