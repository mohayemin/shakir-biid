@model IEnumerable<BIID.Entities.Planting>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutOfAdmin.cshtml";
}

<h2>List of planting</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
         <th>
            Item
        </th>
        <th>
            SoliType
        </th>
        <th>
            PlantingTime
        </th>
        <th>
            PlantingSystems
        </th>
        <th>
            PlantingSpace
        </th>
        <th>
            Seeding
        </th>
        <th>
            Remarks
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       <td>
            @Html.DisplayFor(modelItem => item.Item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoliType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlantingTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlantingSystems)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlantingSpace)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Seeding)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remarks)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
