@model IEnumerable<BIID.Entities.SupplierAddress>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutOfAdmin.cshtml";
}

<h2>List of Supplier Address</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            DetailsSupplierInfo
        </th>
        <th>
            CustomerDistrict
        </th>
        <th>
            CustomerUpozilla
        </th>
        <th>
            Address
        </th>
        <th>
            Contact
        </th>
        <th>
            Email
        </th>
        <th>
            Remarks
        </th>
        <th>
            WebAddress
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DetailsSupplierInfo.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerDistrict.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerUpozilla.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contact)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remarks)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WebAddress)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
