    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutOfAdmin.cshtml";
}


<h2>Delete Tips</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Tips</legend>

     <div class="display-label">Item</div>
